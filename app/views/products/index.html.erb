        <td><%= product.family.name %></td>
        <td><%= link_to 'Editar', edit_product_path(product), :class => 'adicionar editar' %></td>
        <td><%= link_to 'Comprado', product, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'adicionar apagar' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

