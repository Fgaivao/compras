<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :nome, :class => 'label' %><br><br>
    <%= form.text_area :name, cols: "70", rows: "5", :class => 'area' %>
  </div><br><br>

  <div class="field">
    <%= form.label :loja_id, :class => 'label' %><br><br>
    <%= form.collection_select :loja_id, Loja.order(:name), :id, :name, include_blank: true, :class => 'novo' %>
  </div><br><br>

  <div class="field">
    <%= form.label :casa, :class => 'label' %><br><br>
   <%= form.collection_select :family_id, Family.order(:name), :id, :name, include_blank: true, :class => 'novo' %>
  </div><br><br>

  <div class="actions" style="text-align: center;">
    <%= form.submit 'Fazer pedido', :class => 'pedido' %>
  </div>
<% end %>
